<script>
  function resetPaddingTop() {
    $("section").css("padding-top", "50px");
  }

  $(document).ready(function() {
    //var navbarHeight = $(".navbar").height() + "px";
    $("ul.nav li").click(function() {
      $.each($("ul.nav li"), function(index) {
        $(this).removeClass("active");
      });
      $(this).addClass("active");

      resetPaddingTop();

      var curSectionElem = $(this).find("a").attr("href");
      if (curSectionElem != "#section-about-koscom" && curSectionElem != "#section-family-sites")
        $(curSectionElem).css("padding-top", "50px");
    });

    $("html, body").on("mousewheel DOMMouseScroll", function(e) {
      resetPaddingTop();
    });

    //문서 최초 호출 시
    resetPaddingTop();
    var urlSectionId = $(location).attr("href").split("#")[1];
    console.log("urlSectionId=", urlSectionId);
    var selector = "";
    if (urlSectionId != "" && urlSectionId != undefined) {
      selector = "#" + urlSectionId;
    } else if (urlSectionId == undefined) {
      selector = "";
      return;
    } else {
      selector = "#section-header";
    }

    document.location.href = selector;
    if (selector != "#section-about-koscom" && selector != "#section-family-sites")
      $(selector).css("padding-top", "50px");

  });

</script>



